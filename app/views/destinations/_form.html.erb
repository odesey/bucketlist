<div class="new-destination">
	<h3>New Destination</h3>

	<%= form_for @destinations, :remote => true do |f| %>

		<div class="field">
			<%= f.text_field :name %>
		</div>

		<div class="field">
			<%= f.text_field :image_url %>
		</div>

		<div class="field">
			<%= f.submit %>
		</div>
	<% end %>
</div>